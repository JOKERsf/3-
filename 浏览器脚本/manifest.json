{
  "manifest_version": 3,
  "name": "专利号图片显示插件",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*", 
        "pdfs/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
